<div class="panel panel-default">
	<div class="panel-heading">
		<h3 class="panel-title">Questão nº <%= @question.id %></h3>
	</div>
	<div class="panel-body">
		<%= form_for(@question) do |q| %>
			<div>
			<%= q.label :Questão %><br>
			<%= q.text_field :content %>
			</div>
			<br>
			<div>
			<%= q.label :Pontos %><br>
			<%= q.text_field :points %>
			</div>
			<br>
			<div>
				<button class="btn btn-default" type="submit">Enviar</button>
				<%=link_to "Cancelar", question_path(@question), :class => "btn btn-default"%>
			</div>
		<% end %>
	</div>
</div>
