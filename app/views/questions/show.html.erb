<div class="panel panel-default">
	<div class="panel-heading">
		<h3 class="panel-title">Questão nº <%= @question.id %></h3>
	</div>
	<div class="panel-body">
		<h1><%= @question.content %></h1>
		<%= bootstrap_form_for (@question) do |t| %>
			<%= t.form_group :answer, label: { text: "resposta" } do %>
				<%= t.radio_button :answer, true, label: "SIM" %>
				<%= t.radio_button :answer, false, checked: true, label: "NÃO" %>
			<% end %>
		<%= t.submit "Enviar", :class => "btn btn-success"  %>
		<% end %> 
		<br>
			
		<a href="/questions" class="btn btn-danger" role="presentation">Cancelar</a>
		</button>
		
	</div>
</div>