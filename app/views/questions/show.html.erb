<div class="panel panel-default">
	<div class="panel-heading">
		<h3 class="panel-title">Questão nº <%= @question.id %></h3>
	</div>
	<div class="panel-body">
		<h1><%= @question.content %></h1>
		<h1><%= @question.counter.to_s %></h1>
		<%= bootstrap_form_for (@question) do |t| %>
			<%= t.form_group :answer, labe: { text: "resposta" } do %>
				<%= t.radio_button :answer, true, label: "SIM" %>
				<%= t.radio_button :answer, false, label: "NÃO" %>
			<% end %>
		<%= t.submit "Enviar" %>
		<% end %>
	</div>
</div>