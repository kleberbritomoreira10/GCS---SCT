<%= bootstrap_form_for @campaign, :html => { :multipart => true } do |t| %>
	<%= t.text_field :name, label: "Nome", :class=>"margin_field", required: true %>
	<%= t.text_field :url, label: "URL", :class=>"margin_field"%>
	<%= t.text_area :description, label: "Descrição", size: "30x10", :class=>"margin_field", required: true %>
	<%= t.file_field :avatar %>
	<%= t.submit "Enviar", :class=>"btn btn-warning" %>
	<%= link_to "Cancelar", :back, {:class=>"btn btn-warning"} %>
<% end %>	