
<!DOCTYPE html>
<html>
<head>
	<title>Meu Perfil</title>
</head>

<body>
	<h1 align="center">Meu Perfil</h1>
	<% flash.each do |name, msg| %>
  		<%= content_tag :div, msg, :id => "flash_#{name}" %>
	<% end %>
	<table align="center">
		<tr>
			<td width="200"><%=link_to "Editar", users_profile_edit_path%></td>
			<td width="200"><%= link_to "Voltar", users_path%></td>
			<td><%= link_to "Log out", logout_path%></td>
		</tr>
	</table>

	<table width="300px">
		<tr>
			<td>Nome:</td>
			<td><%= @user.name %></td>
		</tr>
		<tr>
			<td>Email:</td>
			<td><%= @user.email %></td>		
		</tr>
	</table>
</body>
</html>

