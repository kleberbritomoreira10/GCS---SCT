<div id="container_margin" class="container color_label">
    <h1 align="center">Novo Depoimento</h1>
        <p id="margin_correction"><b>ATENÇÃO: </b>Não insira nomes ou qualquer outro tipo de informação pessoal.</p>
        <%= bootstrap_form_for(@testimonial) do |t| %>
        	<%= t.text_field :title, label: "Título", :class=>"margin_field", required: true %>
        	<%= t.text_area :body, label: "Texto", size: "30x10",:class=>"margin_field", required: true %>
        	<%= t.submit "Enviar", {:class=>"btn btn-warning"} %>
        	<%= link_to "Cancelar", :back, {:class=>"btn btn-warning"} %>
        	<% end %>
</div>