<h2>Principais tipos:</h2>
  <div class="row">
    <% @drugs.each do |drug| %>
      <div class="col-md-4">
        <div class="hoverzoom">
          <%= link_to drug do %>
            <img id="Thumb" <%= image_tag drug.avatar.url(:medium) %>
        <% end %>
            <div class="retina">    
          <p align="justify"><%= drug.description %></p>
          <a class="btn btn-info" href="/drugs/<%= drug.id%>"><%= drug.name %></a>        
            </div>
              <th>
                <%= link_to "Alterar", "/drugs/#{drug.id}/edit", :class=>"btn btn-primary"%>
              </th>
              <th>
                <%= button_to "Excluir", "/drugs/#{drug.id}", :class=>"btn btn-danger", 
                                                              :method => :delete,
                                                              data: {confirm: "Tem certeza?"}%><br>
              </th>
        </div>
  </div>          
    <% end %>
</div>
