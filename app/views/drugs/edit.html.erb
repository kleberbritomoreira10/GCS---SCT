<div id="container_margin" class="container">
    <h1 align="center"><b>Editar informações</b></h1>
    <hr>
    <%= bootstrap_form_for @drug do |t| %>
    <div class="row">
        <div class="col-md-6">
        <h3><i>Informações</i></h3>
            <%= t.text_field :name , label: "Nome" %>
            <%= t.text_field :drug_type , label: "Tipo" %>
            <%= t.text_area :description , label: "Descrição" %>
            <%= t.submit :salvar , {:class=>"btn btn-warning"} %>
        </div>
        <div class="col-md-6">
            <h3><i>Dependência</i></h3>
            <%= t.text_field :dependence_psychological , label: "Psicológica" %>
            <%= t.text_field :dependence_phisical , label: "Física:" %>
        </div>
    </div>
<%end%>
</div>