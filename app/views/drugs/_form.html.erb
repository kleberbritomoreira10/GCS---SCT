<%= bootstrap_form_for @drug, :html => { :multipart => true }  do |t| %>
    <%= t.text_field :name, label: "Nome", required: true %>
    <%= t.text_field :drug_type, label: "Tipo", required: true %>
    <%= t.text_field :dependence_phisical, label: "Dependencia psicológica", required: true %>
    <%= t.text_field :dependence_physicological, label: "Dependencia psicológica", required: true %>
    <%= t.text_field :effect, label: "Efeitos", required: true %>
    <%= t.text_area :description, label: "Descrição", size: "30x10", required: true %>
    <%= t.file_field :avatar %>
    <%= t.submit "Enviar" %>
    <%= link_to "Cancelar", :back, {:class=>"btn btn-default"} %>
<% end %>